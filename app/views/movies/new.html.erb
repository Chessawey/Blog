<%= form_with scope: :movie, url: create_movie_path, local: true do |f| %>

  <p>
    <% if @movie.errors.any? %>
      <ul>
        <% @movie.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  
    <% end %>
  
  </p>
  
  <p>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
  </p>
  
  <p>
      <%= f.label :summary %><br/>
      <%= f.text_field :summary %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
  
  <% end %>